[general]
ui         = ttyui
accounts   = gmail, lyft, fastmail
pythonfile = ~/.mutt/offlineimaphelpers.py
fsync      = False

[mbnames]
enabled = yes
filename = ~/.mutt/temp/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account gmail]
localrepository  = gmail-local
remoterepository = gmail-remote
status_backend   = sqlite
postsynchook     = mu index --maildir=~/.mail

[Repository gmail-local]
type = Maildir
localfolders = ~/.mail/keithbsmiley-gmail.com
nametrans = local_nametrans_gmail
folderfilter = folder_filter

[Repository gmail-remote]
maxconnections = 1
type = Gmail
remoteuser = wjmccarthy@gmail.com
remotepasseval = get_keychain_pass(account="wjmccarthy@gmail.com",
                                   server ="imap.gmail.com")
realdelete = no
sslcacertfile = ~/.mutt/Equifax_Secure_CA.cert
nametrans = remote_nametrans_gmail
folderfilter = folder_filter
createfolders = False

